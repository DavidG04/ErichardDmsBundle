
{% set spanValue = (12 / parameter('dms.gallery.items_per_row'))|number_format(0) %}

<div class="row-fluid">
{% for document in documents %}

  {% set image = path(
    'erichard_dms_media_show', {
      'dimension' : parameter('dms.gallery.image_size'),
      'path' : document.filename
    })
  %}

  <div class="span{{ spanValue }}">
    <a href="" class="thumbnail" title="{{ document.name }}">
        <img src="{{ image }}" />
    </a>
    <p>{{ document.name }}</p>
  </div>

  {% if loop.index is divisibleby(parameter('dms.gallery.items_per_row')) %}
    </div>
    <div class="row-fluid">
  {% endif %}

{% endfor %}
</div>
