{% extends 'ErichardDmsBundle::layout.html.twig' %}

{% block workspace %}

    <h1>Edit folder</h1>

    <form class="form-horizontal" action="{{ path('erichard_dms_update_node', {'node' : node.slug}) }}" method="POST" novalidate>

        {{ form_widget(form._token) }}
        {{ form_errors(form) }}

        {{ form_row(form.name, {'form_type': 'horizontal'}) }}
        {{ form_row(form.enabled, {'form_type': 'horizontal'}) }}

        {% for metadata in form.metadatas %}
            {{ form_row(metadata, {
                'form_type': 'horizontal',
                'value' : node.getMetadata(metadata.vars.name).value
            }) }}
        {% endfor %}

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save changes</button>
          <button type="button" class="btn">Cancel</button>
        </div>
    </form>

{% endblock %}
