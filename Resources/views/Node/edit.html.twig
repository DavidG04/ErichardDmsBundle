{% extends 'ErichardDmsBundle::layout.html.twig' %}

{% block workspace %}

    <h1>Edit folder</h1>

    <form class="form-horizontal" action="{{ path('erichard_dms_update_node', {'node' : node.slug}) }}" method="POST" novalidate>

        {{ form_widget(form, {'form_type': 'horizontal'}) }}

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Save changes</button>
          <button type="button" class="btn">Cancel</button>
        </div>
    </form>

{% endblock %}
